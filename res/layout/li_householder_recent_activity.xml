<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_li"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/bg_card_title_text_holo_light"
        android:textIsSelectable="false" />

    <LinearLayout
        android:id="@+id/activity_publications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/activity_notes_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/form_notes"
            android:paddingRight="@dimen/default_padding_half"
            android:src="@drawable/ic_action_chat" />

        <TextView
            android:id="@+id/activity_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:padding="2dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/bg_card_title_text_holo_light"
            android:textIsSelectable="false" />
    </LinearLayout>

    <TextView
        android:id="@+id/activity_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textColor="@color/bg_card_default_text"
        android:textIsSelectable="false"
        android:textSize="@dimen/textsizeSM" />

</LinearLayout>